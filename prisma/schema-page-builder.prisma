generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-arm64-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
  output        = "./generated/page-builder"
}

datasource db {
  provider = "postgresql"
  url      = env("PAGE_BUILDER_DATABASE_URI")
}

model Property {
  id            Int              @id @default(autoincrement())
  title         String
  price         String
  category      String
  description   String
  facility      String[] // Array of facilities
  location      String
  longitudeCode String
  latitudeCode  String
  country       String
  street        String
  city          String
  postcode      String
  propertyImage propertyPhotos[]
  isActive      Boolean          @default(true)
  addedBy       String // User ID (Consider making it a relation)
  propertyType  String
  others        Json? // Stores additional dynamic property details
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([category])
  @@index([location])
  @@index([isActive])
}

model propertyPhotos {
  id         Int       @id @default(autoincrement())
  propertyId Int
  url        String
  Property   Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updateAt   DateTime? @default(now())
}
