generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-arm64-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
  output        = "./generated/page-builder"
}

datasource db {
  provider = "postgresql"
  url      = env("PAGE_BUILDER_DATABASE_URI")
}

model Property {
  id            Int              @id @default(autoincrement())
  title         String
  price         String?
  propertyType  String?
  category      String?
  description   String?
  facility      String?
  location      String?
  longitudeCode String?
  latitudeCode  String?
  country       String?
  street        String?
  city          String?
  postcode      String?
  isActive      Boolean          @default(false)
  others        String?
  propertyImage propertyPhotos[] // Relationship to the images
}

model propertyPhotos {
  id         Int       @id @default(autoincrement())
  propertyId Int
  url        String
  Property   Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updateAt   DateTime? @default(now())
}
