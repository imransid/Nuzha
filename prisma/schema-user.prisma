generator client {
  provider      = "prisma-client-js"
  output        = "./generated/user"
  binaryTargets = ["linux-musl-arm64-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("USER_DATABASE_URI")
}

model users {
  id                    Int      @id @default(autoincrement())
  email                 String   @unique
  fullName              String?
  phone                 String?
  password              String?
  bio                   String?
  method                String?
  isPhoneVeriifed       Boolean?
  role                  RoleUSER @default(USERS)
  two_step_verification Boolean?
  isUserActive          Boolean?
  photo                 String?

  createdAt DateTime  @default(now())
  updateAt  DateTime? @default(now())
}

enum RoleUSER {
  ADMIN     @map("ADMIN")
  USERS     @map("USERS")
  SUPERUSER @map("SUPERUSER")
}
